  <property id="backgroundtile" index="true" stored="true" type="boolean" editable="true" >Tile Background Image</property>

  <!-- header color -->
  <property id="headercolor" index="true" stored="true" editable="true" viewtype="color" >Header Color</property>
  <property id="headercolorgradient" index="true" stored="true" editable="true" viewtype="color" >Header Color Gradient</property>
  
