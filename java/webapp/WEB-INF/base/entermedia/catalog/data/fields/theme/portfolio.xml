
<properties >

  <property id="name" index="true" stored="true" editable="true" >Theme Name</property>
  
  <!--  header information and style -->
  <property id="title" index="true" stored="true" editable="true">Site Title</property>
  <property id="logopath" index="true" stored="true" editable="true" note="Relative or absolute URL" >Logo URL</property>
  <property id="logoasset" index="true" stored="true" editable="true" type="list" viewtype="asset" searchtype="portfolio"  internalfield="false" listid="asset" datatype="list"  note="Optional">Logo Asset</property>
  <property id="logowidth" index="true" stored="true" editable="true" >Logo Width</property>
  <property id="logoheight" index="true" stored="true" editable="true" >Logo Height</property>
 
   <!-- global styles -->
  <property id="tileupload" index="true" stored="true" editable="true" type="list" viewtype="asset"  sourcepath="users/${userid}/backgroundtile" internalfield="false" listid="asset" datatype="list"
   tooltip="This acts as a background for the whole site"  note="Optional">Background Asset</property>
  
  <property id="bodybackgroundcolor" index="true" stored="true" editable="true" viewtype="color" >Body Background Color </property>
  <property id="backgroundpath" index="true" stored="true" editable="true" note="Optional">Background Image URL</property>
  
