  <property id="tablebordercolor" index="true" stored="true" editable="true" viewtype="color" >Table Border Color</property>
  <property id="tablehovercolor" index="true" stored="true" editable="true" viewtype="color" >Table Hover Color</property>

  <property id="tablemenubackgroundcolor" index="true" stored="true" editable="true" viewtype="color" >Table Menu Color</property>
